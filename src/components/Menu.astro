import StaggeredMenu from '../premade/menu';

const menuItems = [
  { label: 'Principal', ariaLabel: 'Go to home page', link: '/' },
  { label: 'Sobre m√≠', ariaLabel: 'Learn about us', link: '/sobre_mi' },
  { label: 'Proyectos', ariaLabel: 'View our services', link: '/proyectos' },
  { label: 'Contacto', ariaLabel: 'Get in touch', link: '/contacto' }
];

const socialItems = [
  { label: 'Instagram', link: 'https://instagram.com/gxbri.alm' },
  { label: 'GitHub', link: 'https://github.com/vGxbri' },
